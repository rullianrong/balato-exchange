
<div class="d-flex dashboard">
  <h1 class="mb-2">Transactions</h1>
</div>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Symbol</th>
        <th scope="col">Company name</th>
        <th scope="col">Shares</th>
        <th scope="col">Amount</th>
        <th scope="col">Buy/Sell</th>
      </tr>
    </thead>

    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.created_at.strftime('%b %d, %Y %l:%M %P') %></td>
          <td><%= transaction.symbol %></td>
          <td><%= transaction.stock_name %></td>
          <td><%= transaction.shares %></td>
          <td><%= number_to_currency(transaction.amount) %></td>
          <% if transaction.transaction_type === 'buy' %>
            <td style="color: green"><%= transaction.transaction_type %></td>
          <% else %>
            <td style="color: red"><%= transaction.transaction_type %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

