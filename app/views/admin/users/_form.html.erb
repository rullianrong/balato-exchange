<%= form_with(model: [:admin, user], local: true) do |form| %>
  <div class="form-group">
    <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= form.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
      <% if @minimum_password_length %>
    <em class="form-text text-muted">(Password must be <%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="actions d-flex justify-content-center">
    <%= form.submit 'Add User', class: "btn btn-primary" %>
  </div>
  
<% end %>